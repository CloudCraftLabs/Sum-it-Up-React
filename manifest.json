
{
    "name":"text",
    "description":"Summarizer the text",
    "version":"1.0",
    "manifest_version":3,
    "action":{
      
        "default_title":"text",
        "default_popup":"index.html"

    },
    "content_scripts":[{
      "matches":["<all_urls>"],
      "js":["contentScript.js"]
    }
    ],
    "background":{
        "service_worker":"background.js"
      },
      "permissions":["scripting","tabs","activeTab"],
      "host_permissions":[
       
        "<all_urls>"
        
      ]
      

  }